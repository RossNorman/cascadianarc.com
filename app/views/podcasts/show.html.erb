<div id="podcasts_show">
				<div id="show_banner">
					<div class="wrapper_skinny">
							<h1><%= @podcast.title %></h1>
						<p class="description"><%= @podcast.description %></p>
						<% unless @podcast.itunes.blank? %>
						<a href="<%= @podcasts.itunes %>" class="subscribe_link">itunes</a>
						<% end %>
						<% unless @podcast.stitcher.blank? %>
						<a href="<%= @podcasts.stitcher %>" class="subscribe_link">Sticher</a>
						<% end %>
						<% unless @podcast.podbay.blank? %>
						<a href="<%= @podcasts.podbay %>" class="subscribe_link">PodBay</a>
						<% end %>
					</div>
				</div>

				<div id="breadcrumb">
					<%= link_to podcasts_path do %>
						All Podcasts
						<span>/</span>
						<%= @podcast.title %>
				<% end %>
						
				</div>
				<div id="episodes">
					<div class="wrapper_skinny">
						<ul class="cf">
							<% @episodes.each do |episode| %>
							<li class="cf">
								<div class="episode_thumbnail">
									<a href="#">
										<%= image_tag episode.episode_thumbnail.url(:medium) %>
									</a>
									</div>
										<div class="episode_overview">
											<h2><%= link_to episode.title, podcast_episode_path(@podcast, episode)%></h2>
										<p class="description"><%= truncate(episode.description, length:160) %></p>
								</div>	
							</li>
							<% end %>

							
						</ul>
					</div>
				</div>
			</div>
			<div class="pagination">
				<span class="previous_page disabled">Previous</span>
				<em class="current">1</em>
				<a href="#">2</a>
				<a class="Next_page" href="#">Next</a>
			</div>